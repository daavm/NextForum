<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main_signup"
    tools:context=".signupPage"
    android:orientation="vertical"
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:src="@drawable/logo2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:id="@+id/imageView5" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/frame"
        android:layout_marginTop="14dp">
        <Button
            android:text="Register"
            android:background="@drawable/buttonshape"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:layout_width="75dp"
            android:clickable="true"
            android:layout_height="35dp"
            android:id="@+id/button1"
            android:layout_marginLeft="240dp"
            />
        <TextView
            android:text="Terms of Service"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="terms"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            />
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/scroll">
        <LinearLayout android:id="@+id/login_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:gravity="center"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/app_bar_main_signup"
            tools:context=".signupPage"
            android:orientation="vertical"
            android:background="@color/black"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <EditText
                android:layout_width="300dp"
                android:hint="Email address"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:windowSoftInputMode="adjustPan"
                android:layout_marginTop="0dp"
                android:id="@+id/Email"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="300dp"
                android:hint="Retype email address"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:windowSoftInputMode="adjustPan"
                android:layout_marginTop="0dp"
                android:id="@+id/Email2"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="300dp"
                android:hint="Username"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:ems="10"
                android:windowSoftInputMode="adjustPan"
                android:layout_marginTop="5dp"
                android:id="@+id/Username"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="300dp"
                android:hint="Password"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:windowSoftInputMode="adjustPan"
                android:layout_marginTop="5dp"
                android:id="@+id/Password"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="300dp"
                android:hint="Retype password"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:windowSoftInputMode="adjustPan"
                android:layout_marginTop="5dp"
                android:id="@+id/Password2"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="300dp"
                android:hint="First name"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:windowSoftInputMode="adjustPan"
                android:layout_marginTop="5dp"
                android:id="@+id/name"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="300dp"
                android:hint="Last name"
                android:windowSoftInputMode="adjustPan"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:id="@+id/lastname"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="Do you accept the Terms of Service?"/>
</LinearLayout>